<MenuScreen>:

	BoxLayout:
		orientation: 'vertical'
		
		Label:
			size_hint_y: 0.1
			font_size: '30sp'
			text: 'Typing Games'
		
		GridLayout:
			cols: 2
			size_hint_y: 0.8
			
			GridLayout:
				cols: 3
				padding: [root.width*0.02,root.height*0.02,root.width*0.02,root.height*0.02]
				size_hint_x: .7
				id: GameGrid
			
			GridLayout:
				cols: 1
				size_hint_x: .3
					
				RecycleView:
					viewclass: 'ChartRow'
					size_hint_y: .35
					data: root.best_results
					
					RecycleBoxLayout:
						default_size: None, dp(23)
						default_size_hint: 1, None
						size_hint_y: None
						height: self.minimum_height
						orientation: 'vertical'

				Label:
				    size_hint_y: .05
				
				RecycleView:
					viewclass: 'ChartRow2'
					size_hint_y: .7
					data: root.all_results

					RecycleBoxLayout:
						default_size: None, dp(23)
						default_size_hint: 1, None
						size_hint_y: None
						height: self.minimum_height
						orientation: 'vertical'
			
		Button:
			size_hint_y: 0.1
			text: 'Exit'
			on_press: root.exit()
			
		
<GameLayout>:
    cols:1
	button: button
	description: description
	
    Button:
		id: button
		size_hint_y: .3
        text: ''
        on_press: root.pressed(self.text)
	
    Label:
		id: description
		ize_hint_y: .7
        font_size: '20sp'
        text_size: self.size
        text: ''
        valign: 'top'
