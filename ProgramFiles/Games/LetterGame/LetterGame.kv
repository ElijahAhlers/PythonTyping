# LetterGame.kv

<GameBoard>:
	orientation: 'horizontal'
	BoxLayout:
		orientation: 'horizontal'
		BoxLayout:
			orientation: 'vertical'
			
			GridLayout:
				size_hint_y: 0.2
				rows: 2
				padding:[0,root.height*0.02,0,root.height*0.02]	
				Label:
					font_size: root.width*root.height*0.00004
					text: 'Letter'
					
				Label:
					font_size: root.width*root.height*0.00004
					text: 'Game'
			GridLayout:
				cols: 1
				size_hint_y: 0.1
				Label:
					font_size: '20sp'
					text: 'Choose characters to type below'

			
			GridLayout:
				size_hint_y: 0.6
				padding: [root.width*0.02,0,root.width*0.02,root.width*0.02]
				cols: 2
				ToggleButton:
					id: hr
					text: 'Home Row'
					on_state: root.addHomeRow()
					disabled: False
				ToggleButton:
					id: ehor
					text: 'Add E, H, O, R'
					on_state: root.addEHOR()
					disabled: False
				ToggleButton:
					id: ituc
					text: 'Add I, T, U, C'
					on_state: root.addITUC()
					disabled: False
				ToggleButton:
					id: nwgbp
					text: 'Add N, W, G, B, P'
					on_state: root.addNWGBP()
					disabled: False
				ToggleButton:
					id: mxyzq
					text: 'Add M, X, Y, Z, Q'
					on_state: root.addMXYZQ()
					disabled: False
				ToggleButton:
					id: perComColQuest
					text: 'Add Period, Comma,\nColon, Question Mark'
					on_state: root.addPeriodCommaColonQuestion()
					disabled: False
				ToggleButton:
					id: quoteApostHyp
					text: 'Add Quotations,\nApostrophe, Hyphen'
					on_state: root.addQuotesApostropheHyphen()
					disabled: False
				ToggleButton:
					id: Cap
					text: 'Add Capital Letters'
					on_state: root.addCapitals()
					disabled: True
				ToggleButton:
					id: Num
					text: 'Add Numbers'
					on_state: root.addNumbers()
					disabled: False
				ToggleButton:
					id: specChar
					text: 'Add Special Characters'
					on_state: root.addSpecialCharacters()
					disabled: False
			GridLayout:
				cols: 1
				size_hint_y: 0.1
				padding: [root.width*0.02,0,root.width*0.02,root.width*0.02]		
				Button:
					text: 'Exit'
					on_press: root.exit()

	
	BoxLayout:
		orientation: 'horizontal'
		size_hint: 2,1
		BoxLayout:
			orientation: 'vertical'
			GridLayout:
				rows: 3
				GridLayout:
					cols: 2
					GridLayout:
						cols: 2
						Label:
							text: 'Time:'
							font_size: '30sp'
						Label:
							id: timeAllowed
							text: '180 Seconds'
							font_size: '30sp'
					
					GridLayout:
						cols: 1
						padding:[root.width*0.02,root.height*0.01,root.width*0.02,0]
						Button:
							id: BeginButton
							text: 'Begin'
							font_size: '30sp'
							on_press: root.BeginGame()
							on_release: root.resetGameBoard()
							disabled: True
					
				GridLayout:
					rows: 1
					Slider:
						id: difficulty
						orientation: 'horizontal'
						min: 0
						max: 300
						step: 1
						value: 180
						disabled: False
					
				Label:
					text: ''
					
			BoxLayout:
				size_hint: 1,2
				LetterGrid
				
			Label:
				id: winLoss
				text: ''
				font_size: '70sp'
		
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'vertical'
			GridLayout:
				cols: 1
				size_hint_y: (0.1)
				
				Label:
					font_size: '40sp'
					text: 'Scoreboard'
					
			GridLayout:
				cols: 2
				size_hint_y: (0.9)
				
				GridLayout:
					rows: 11
					
					Label:
						font_size: '20sp'
						text: 'Date'
					
					Label:
						id: game0
					Label:
						id: game1
					Label:
						id: game2
					Label:
						id: game3
					Label:
						id: game4
					Label:
						id: game5
					Label:
						id: game6
					Label:
						id: game7
					Label:
						id: game8
					Label:
						id: game9
						
				GridLayout:
					rows: 11
					Label:
						font_size: '20sp'
						halign: 'center'
						text: 'Score'
					
					Label:
						id: time0
					Label:
						id: time1
					Label:
						id: time2
					Label:
						id: time3
					Label:
						id: time4
					Label:
						id: time5
					Label:
						id: time6
					Label:
						id: time7
					Label:
						id: time8
					Label:
						id: time9
