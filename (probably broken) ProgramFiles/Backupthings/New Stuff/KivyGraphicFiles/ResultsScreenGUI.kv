#FileName: ResultsScreenGUI.kv

<Label>:
	font_name: 'KivyGraphicFiles/Fonts/UbuntuMono-R'

<ResultsWindow>:
	orientation: 'horizontal'
	
	BoxLayout:
		orientation: 'vertical'
		size_hint: 2,1.7
		GridLayout:
			cols: 2
			padding: [0,root.height*0.75,0,0]
			Label:
				id: lessonName
				text: 'Lesson ##'
				font_size: root.width*root.height*0.00003
			
			GridLayout:
				cols: 4
				
				Label:
					text: 'Accuracy'
					font_size: root.width*root.height*0.00003
				
				Label:
					text: ''
					
				Label:
					text: 'WPM'
					font_size: root.width*root.height*0.00003
				
				Label:
					text: ''
			
		Chart:
				
	BoxLayout:
		orientation: 'horizontal'
		GridLayout:
			rows: 5
			
			GridLayout:
				cols: 2
				
				GridLayout:
					cols: 1
					Label:
						text: ''
				
				GridLayout:
					cols: 5
					
					Label:
						text: ''
						
					Label:
						text: ''
						
					Label:
						text: ''
					
					
					GridLayout:
						rows: 5
						
						Label:
							text: ''
						Button:
							text: 'Exit'
							on_press: root.exit()
							
						Label:
							text: ''
						
						Label:
							text: ''
						
						Label:
							text: ''
						
					Label:
						text: ''
				
			GridLayout:
				rows:3
				
				Label:
					font_size: root.width*root.height*0.00002
					text: "Today's average \n    Accuracy"
				
				Label:
					id: averageaccuracy
					font_size: root.width*root.height*0.00002
					text: '###%'
				
				Label:
					text: ''
			
			GridLayout:
				rows: 3
				
				Label:
					font_size: root.width*root.height*0.00002
					text: "Today's average \nWords Per Minute"
				
				Label:
					id: averagewpm
					font_size: root.width*root.height*0.00002
					text: '##'
				
				Label:
					text: ''
			
			GridLayout:
				rows: 4
				
				Label:
					font_size: root.width*root.height*0.00002
					text: 'Total Idle Time'
				
				Label:
					id: idletime
					font_size: root.width*root.height*0.00002
					text: '##:##'
					
				Label:
					id: timeUntilIdleTime
					color: 1,1,1,1
					font_size: root.width*root.height*0.00002
					text: '##:##'
					
				Label:
					text: ''
				
			GridLayout:
				cols: 1
				padding: [root.width*0.05,root.height*0.01,root.width*0.05,root.height*0.1]
				Button:
					id: nextLessonButton
					font_size: root.width*root.height*0.00002
					text: 'Next Lesson'
					on_press: root.nextLesson()
			
	