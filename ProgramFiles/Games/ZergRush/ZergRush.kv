



<ZergRushLayout>
	orientation: 'vertical'
		
	GridLayout:
		cols: 2
		size_hint_y: (0.1)
		
		GridLayout:
			cols: 5
		
			Button:
				id: diff1
				text: 'Easy'
				on_release: root.chgDif('Easy')
			
			Button:
				id: diff2
				text: 'Medium'
				on_release: root.chgDif('Medium')
			
			Button:
				id: diff3
				text: 'Hard'
				on_release: root.chgDif('Hard')
			
			Button:
				id: diff4
				text: 'Very Hard'
				on_release: root.chgDif('Very Hard')
			
			Button:
				id: diff5
				text: 'Good Luck'
				on_release: root.chgDif('Good Luck')
		
		GridLayout:
			cols: 3
			
			Label:
				size_hint: [.25,1]
				text_size: self.size
				text: 'Score:  '
				halign: 'right'
				valign: 'center'
			
			Label:
				id: score
				size_hint: [.45,1]
				text_size: self.size
				text: 'You Haven\'t Started'
				halign: 'left'
				valign: 'center'
			
			Button:
				id: endButton
				size_hint: [.3,1]
				text: 'Close'
				on_release: root.Exit()


	FloatLayout:
		id: gameScreen
		rows: 1
		size_hint_y: (0.8)
		size: [100,100]
		
		Label:
			id: beginInstructions
			text: 'Click the button or\npress space to start'
			halign: 'center'
			valign: 'center'
			size_hint: [.6,.6]
			pos_hint: {'top':.8,'x':.2,'y':.2,'right':.8}
			
	GridLayout:
		rows: 1
		size_hint_y: (0.1)
		
		Button:
			text: 'Useless3'