# LetterGame.kv

<GameBoard>:
	orientation: 'horizontal'
	BoxLayout:
		orientation: 'horizontal'
		GridLayout:
			rows: 3
			
			GridLayout:
				rows: 4
				
				Label:
					text: ''
					
				Label:
					font_size: root.width*root.height*0.00004
					text: 'Letter'
					
				Label:
					font_size: root.width*root.height*0.00004
					text: 'Game'
				
				Label:
					text: ''
			
			Label:
				text: ''
			
			Label:
				text: ''
	
	BoxLayout:
		orientation: 'horizontal'
		size_hint: 2,1
		BoxLayout:
			orientation: 'vertical'
			GridLayout:
				rows: 3
				GridLayout:
					cols: 2
					GridLayout:
						cols: 2
						Label:
							text: 'Time:'
							font_size: '30sp'
						Label:
							id: timeAllowed
							text: '180 Seconds'
							font_size: '30sp'
					
					Button:
						text: 'Begin'
						on_press: root.BeginGame()
					
				GridLayout:
					rows: 1
					Slider:
						id: difficulty
						orientation: 'horizontal'
						min: 0
						max: 300
						step: 1
						value: 180
					
				Label:
					text: ''
					
			BoxLayout:
				size_hint: 1,2
				LetterGrid
				
			Label:
				id: winLoss
				text: ''
				font_size: '70sp'
		
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation: 'vertical'
			GridLayout:
				cols: 1
				size_hint_y: (0.1)
				
				Label:
					font_size: '40sp'
					text: 'Scoreboard'
					
			GridLayout:
				cols: 2
				size_hint_y: (0.9)
				
				GridLayout:
					rows: 11
					
					Label:
						font_size: '20sp'
						text: 'Date / Game #'
					
					Label:
						id: game0
					Label:
						id: game1
					Label:
						id: game2
					Label:
						id: game3
					Label:
						id: game4
					Label:
						id: game5
					Label:
						id: game6
					Label:
						id: game7
					Label:
						id: game8
					Label:
						id: game9
						
				GridLayout:
					rows: 11
					Label:
						font_size: '20sp'
						halign: 'center'
						text: 'Time\n(seconds)'
					
					Label:
						id: time0
					Label:
						id: time1
					Label:
						id: time2
					Label:
						id: time3
					Label:
						id: time4
					Label:
						id: time5
					Label:
						id: time6
					Label:
						id: time7
					Label:
						id: time8
					Label:
						id: time9
